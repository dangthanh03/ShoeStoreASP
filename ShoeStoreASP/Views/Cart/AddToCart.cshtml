@model ShoeStoreASP.Models.ViewModel.ShoeListViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Shopping Cart</title>

    <!-- Link đến Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZwT" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Shopping Cart</h2>
        @if (Model != null && Model.Shoes != null && Model.Shoes.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shoe in Model.Shoes)
                    {
                        <tr>
                            <td>@shoe.Name</td>
                            <td>@shoe.Price</td>
                            <td>
                                <!-- Thêm nút hoặc hành động để xóa sản phẩm khỏi giỏ hàng -->
                                <a href="/Cart/RemoveFromCart?ProductId=@shoe.ShoeId">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-right">
                <strong>Total:</strong> @Model.Shoes.Sum(shoe => shoe.Price)
            </div>
            <a class="btn btn-primary" href="/Cart/Buy">Buy</a>

        }
        else
        {
            <p>Your shopping cart is empty.</p>
        }
    </div>

    <!-- Link đến Bootstrap JS và jQuery (chú ý đặt jQuery trước Bootstrap JS) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
