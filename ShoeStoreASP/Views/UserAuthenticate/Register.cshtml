@model ShoeStoreASP.Models.ViewModel.RegistrationModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5 Contentt float-in">
    <h2 class="mt-4">Register</h2>

    <form method="post" class="mt-3" asp-action="Register" asp-controller="UserAuthenticate">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label">Email</label>
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Username" class="form-label">Username</label>
            <input asp-for="@Model.Username" class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Password" class="form-label">Password</label>
            <input asp-for="@Model.Password" type="password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.PasswordConfirm" class="form-label">Password Confirm</label>
            <input asp-for="@Model.PasswordConfirm" type="password" class="form-control" />
            <span asp-validation-for="@Model.PasswordConfirm" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Role" class="form-label">Role</label>
            <select asp-for="@Model.Role" class="form-control">
                @foreach (var role in @Model.AvailableRoles)
                {
                    <option value="@role">@role</option>
                }
            </select>
            <span asp-validation-for="@Model.Role" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>